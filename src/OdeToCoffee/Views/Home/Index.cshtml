@model OdeToCoffee.ViewModels.HomePageViewModel

@{
    ViewBag.Title = "OdeToCoffee - Index page";
}

<h1>Home page</h1>
<br />

<div>
    <h3>Kawiarnie: </h3>

    <table>
        @foreach (var coffeehouse in Model.Coffeehouses)
            {
            <tr>
                <td>@coffeehouse.Name</td>
                <td>
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@coffeehouse.Id">Details</a>
                    <a asp-action="Edit" asp-route-id="@coffeehouse.Id">Edit</a>
                </td>
            </tr>
        }
    </table>
</div>

<br/>

<a asp-controller="Home" asp-action="Create">Create</a>

@section footer
{
    <h3>@Model.MessageOfTheDay</h3>
}
